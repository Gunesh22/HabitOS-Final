{
  "name": "habit-os",
  "version": "0.1.0",
  "author": {
    "name": "HabitOS Team",
    "email": "support@habitos.com"
  },
  "description": "Human Optimization Interface",
  "private": true,
  "main": "public/electron.js",
  "homepage": "./",
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@google/generative-ai": "^0.24.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^13.5.0",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.7.3",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-quill-new": "^3.7.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron:dev": "concurrently \"BROWSER=none npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "npm run build && electron-builder build --win --mac --linux",
    "electron:build:win": "npm run build && electron-builder build --win",
    "electron:build:mac": "npm run build && electron-builder build --mac",
    "electron:build:linux": "npm run build && electron-builder build --linux"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Gunesh22/HabitOS-Final"
  },
  "build": {
    "publish": [
      {
        "provider": "github",
        "owner": "Gunesh22",
        "repo": "HabitOS-Final"
      }
    ],
    "appId": "com.habitos.app",
    "productName": "HabitOS",
    "copyright": "Copyright Â© 2026 HabitOS",
    "directories": {
      "buildResources": "public"
    },
    "files": [
      "build/**/*",
      "public/electron.js",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/logo512.png",
      "signAndEditExecutable": false
    },
    "mac": {
      "target": "dmg",
      "icon": "public/logo512.png",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "public/logo512.png",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "wait-on": "^7.2.0"
  }
}